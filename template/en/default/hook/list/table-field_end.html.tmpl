	[% PROCESS "bug/field.html.tmpl"
            bug = bug, field = select_fields.$column,
            override_legal_values = bug.choices.$column
            no_tds = 1, value = bug.$column
            editable = 1 %]
	&nbsp
        <a href="" onclick="return check_if_edited_field_changed();">[done]</a>
