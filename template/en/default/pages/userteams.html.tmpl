</td>
<td>
[% IF userteamlist.size > 0 %]
<table>
  <tr>
    <th>Team</th>
    <th>Owner</th>
    <th>Login</th>
  </tr>
[% FOREACH team IN userteamlist %]

<tr>
<td>
<a href="page.cgi?id=createteam.html&teamid=[% team.id %]">
[% team.name() %]
</a>
</td>
<td>
<a href="page.cgi?id=createteam.html&teamid=[% team.id %]">
[% team.owner_user().name() %]
</a>
</td>
<td>
<a href="page.cgi?id=createteam.html&teamid=[% team.id %]">
[% team.owner_user().login() %]
</a>
</td>
<td>
[% IF user.in_group('editteams') %]
<a href="" onclick="return outofteam([% team.id %], '[% team.name %]');">
