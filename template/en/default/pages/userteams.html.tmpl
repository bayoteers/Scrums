[% PROCESS global/header.html.tmpl
    title = "User's teams" 
%]

<script scripttype="text/javascript">
function outofteam(teamid, teamname)
{
	if( confirm("Do you want to remove user '[% username %]' from team '"  + teamname + "'?") )
	{
		window.document.forms['teams'].elements['addteam'].value="";
		window.document.forms['teams'].elements['remteam'].value=teamid;
		window.document.forms['teams'].submit();
	}
	return false;
}
</script>

<table>
<tr>
<td>
<b>User:</b>
</td>
