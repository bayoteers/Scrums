[% PROCESS global/header.html.tmpl
    title = "Team" 
%]

<script scripttype="text/javascript">
  function cancel()
  {
        window.location="page.cgi?id=scrums/createteam.html&teamid=[% teamid %]";
  }
</script>

  <p>
    Do you want to make <strong>[% userrealname %]</strong> a member of <strong>[% teamname %]</strong>?
  </p>

  <form method="post" action="page.cgi">
    <input type="hidden" name="id" value="scrums/createteam.html"/>
    <input type="hidden" name="addintoteam" value="true"/>
    <input type="hidden" name="userid" value="[% userid %]"/>
    <input type="hidden" name="teamid" value="[% teamid %]"/>

    <input type="submit" value="Yes"/>
    <input type="button" value="No" onClick="cancel()"/>
  </form>

  <p>
    <a href="page.cgi?id=scrums/allteams.html">Manage Team</a>
  </p>

[% PROCESS global/footer.html.tmpl %]



